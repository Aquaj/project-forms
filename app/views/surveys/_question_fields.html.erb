<div class="nested-fields"> 
  <div class="row">
    <div class="col-sm-10">
      <%= f.input :content, style: "height: 2em;", label: "Question" %>
    </div>
    <div class="col-sm-2">
      <%= link_to_remove_association f, data: {confirm: 'Are you sure?'}, class: "btn btn-primary", style: "width: 100%; margin: 1em 0;"  do %>
        X
      <% end %>
      <%= f.input :position, placeholder: "Position", label: false %>
    </div>
  </div>

  <div class="row">
    <div class="container-fluid">
      <%= f.fields_for :choices do |choice| %>
        <%= render 'choice_fields', f: choice %>
      <% end %>
    </div>

    <div class="col-sm-10">
      <div class="new-choices">
        <%= link_to_add_association 'New choice', f, :choices, class: "btn btn-primary", style: "width: 100%;"  %>
      </div>
    </div>
  </div>

</div>
